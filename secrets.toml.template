# .streamlit/secrets.toml
# ──────────────────────────────────────────────────────────────
# Local: save as .streamlit/secrets.toml  (add to .gitignore)
# Streamlit Cloud: App Settings → Secrets → paste contents
# ──────────────────────────────────────────────────────────────

# OpenAI
OPENAI_API_KEY = "sk-..."

# GitHub — Personal Access Token
# Scopes needed: repo, actions:write, actions:read
# Create at: github.com → Settings → Developer settings → PATs → Fine-grained
GITHUB_PAT   = "github_pat_..."
GITHUB_OWNER = "your-github-username"
GITHUB_REPO  = "your-repo-name"

# ServiceNow PDI
SERVICENOW_INSTANCE = "dev12345.service-now.com"
SERVICENOW_USER     = "admin"
SERVICENOW_PASS     = "your-pdi-password"
